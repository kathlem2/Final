<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<% if user.isTeacher %>
<p>
  <strong>Role:</strong>
  Teacher
</p>

<% else %>

  <p>
  <strong>Role:</strong>
  Student
</p>

<p>
  <strong>Group Id:</strong>
  <%= @user.group_id %>
</p>
<% end %>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
