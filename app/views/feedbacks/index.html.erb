<p id="notice"><%= notice %></p>

<h1>Feedbacks</h1>

<table class="table table-striped">
  <thead class="thead-color">
    <tr>
      <th>Presentation</th>
      <th>Ranking</th>
      <th>Comment</th>
      <th colspan="3">Options</th>
    </tr>
  </thead>

  <tbody>
    <% @feedbacks.each do |feedback| %>
      <tr>
        <td><%= feedback.presentation_id %></td>
        <td><%= feedback.ranking %></td>
        <td><%= feedback.comment %></td>
        <td><%= link_to 'Show', feedback %></td>
        <td><%= link_to 'Edit', edit_feedback_path(feedback) %></td>
        <td><%= link_to 'Destroy', feedback, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="text-center"> <%= link_to 'New Feedback', new_feedback_path, class: "btn btn-primary mb-2"%> </div>

